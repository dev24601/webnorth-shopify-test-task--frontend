{{ 'webnorth-featured-collection.css' | asset_url | stylesheet_tag }}
{{ 'webnorth-card-product.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="webnorth-container section-{{ section.id }}-padding">
  {% if section.settings.title != blank %}
    <header class="webnorth-featured-collection-header">
      <h2>
        {% if section.settings.collection.url %}
          <a href="{{ section.settings.collection.url }}">
            {{- section.settings.title -}}
          </a>
        {% else %}
          {{- section.settings.title -}}
        {% endif %}
      </h2>
    </header>
  {% endif %}

  <ul
    class="webnorth-featured-collection-list webnorth-featured-collection-list--collumns-{{ section.settings.columns }}"
    role="list"
  >
    {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
      <li class="webnorth-featured-collection-item">
        {% render 'webnorth-card-product',
          product: product,
          open_in_new_tab: section.settings.open_in_new_tab,
          columns: section.settings.columns,
          skip_styles: true
        %}
      </li>
    {%- endfor -%}
  </ul>
</div>

{% schema %}
{
  "name": "Webnorth collection",
  "tag": "section",
  "class": "section-webnorth-featured-collection",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "placeholder": "Featured Products"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Layout Columns",
      "options": [
        {
          "value": "two",
          "label": "2 columns"
        },
        {
          "value": "three",
          "label": "3 columns"
        }
      ],
      "default": "three"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 1,
      "max": 25,
      "step": 1,
      "default": 3,
      "label": "Maximum products to show"
    },
    {
      "type": "checkbox",
      "id": "open_in_new_tab",
      "label": "Open products in a new tab",
      "default": false
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top Spacing",
      "default": 51
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom Spacing",
      "default": 51
    }
  ],
  "presets": [
    {
      "name": "Webnorth collection"
    }
  ]
}
{% endschema %}
